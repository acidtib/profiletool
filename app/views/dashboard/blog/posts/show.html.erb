<div class="row twelve columns">
<h1><%= @post.title %></h1>

<%= @post.text %>

<h2>Comments</h2>

<% @post.comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p><%= time_ago_in_words comment.created_at %> ago</p>
  <p><%= link_to "Delete comment", [:dashboard, :blog, @post, comment], :method => :delete, :confirm => "Are you sure?" %></p>
<% end %>

<%= form_for [:dashboard, :blog, @post, @post.comments.build] do |f| %>
  <p><%= f.text_area :text, :size => "40x10" %></p>
  <p><%= f.submit "Post Comment" %></p>
<% end %>

<p>
<%= link_to "Back", dashboard_blog_posts_path %>
|
<%= link_to "Edit", edit_dashboard_blog_post_path(@post) %>
|
<%= link_to "Delete", [:dashboard, :blog, @post], :method => :delete, :confirm => "Are you sure?"%>
</p>
</div>
