<h1><%= @dashboard_blog_post.title %></h1>

<%= @dashboard_blog_post.text %>

<h2>Comments</h2>

<% @dashboard_blog_post.comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p><%= time_ago_in_words comment.created_at %> ago</p>
  <p><%= link_to "Delete comment", [@dashboard_blog_post, comment], :method => :delete, :confirm => "Are you sure?" %></p>
<% end %>

<%= form_for [@dashboard_blog_post, @dashboard_blog_post.comments.build] do |f| %>
  <p><%= f.text_area :text, :size => "40x10" %></p>
  <p><%= f.submit "Post Comment" %></p>
<% end %>

<p>
<%= link_to "Back", dashboard_blog_posts_path %>
|
<%= link_to "Edit", edit_dashboard_blog_post_path(@dashboard_blog_post) %>
|
<%= link_to "Delete", @post, :method => :delete, :confirm => "Are you sure?"%>
</p>
